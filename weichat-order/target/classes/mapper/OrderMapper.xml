<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.dao.OrderMapper">

    <select id="findAllOrderByOpenid" resultType="com.qf.pojo.Order">
        SELECT * FROM meituan.`order` WHERE openid = #{openid}
    </select>

    <select id="findOrderById" resultType="com.qf.pojo.Order">
        SELECT * FROM meituan.`order` WHERE id = #{id}
    </select>

    <delete id="deleteOrderById">
        DELETE FROM meituan.`order` WHERE id = #{id}
    </delete>

</mapper>